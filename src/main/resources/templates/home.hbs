{{#partial "head"}}
    <link rel="stylesheet" href="assets/home.css">
{{/partial}}

{{#partial "contenido-main"}}
    {{#if fuentes.length}}
        {{#each fuentes}}
            <section>
                <h2>Fuente: {{fuenteID}}</h2>

                {{#if hechos.length}}
                    <table>
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Categoría</th>
                            <th>Latitud</th>
                            <th>Longitud</th>
                            <th>Fecha del Hecho</th>
                            <th>Fecha de Carga</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each hechos}}
                            <tr>
                                <td>{{id}}</td>
                                <td>{{titulo}}</td>
                                <td>{{descripcion}}</td>
                                <td>{{categoria}}</td>
                                <td>{{latitud}}</td>
                                <td>{{longitud}}</td>
                                <td>{{fechaHecho}}</td>
                                <td>{{fechaCarga}}</td>
                                <td>
                                    <form action="/solEliminacion/nueva" method="get">
                                        <input type="hidden" name="fuenteId" value="{{../fuenteID}}">
                                        <input type="hidden" name="hechoId" value="{{id}}">
                                        <button type="submit">Solicitar eliminación</button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <p>No hay hechos registrados en esta fuente.</p>
                {{/if}}
            </section>
            <hr/>
        {{/each}}
    {{else}}
        <p>No hay fuentes disponibles.</p>
    {{/if}}
{{/partial}}

{{> templates/layout}}