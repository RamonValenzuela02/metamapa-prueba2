<html>
<head>
    <title>PROYECTO DISENIO 26</title>
    <nav class="navbar">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/hecho/nuevo">Crear Hecho</a></li>
            <li><a href="/login">Iniciar Sesión</a></li>
        </ul>
    </nav>
</head>
<body>
    <form action="/hechos" method="POST" enctype="multipart/form-data">
        <label for="nombre">Titulo:</label>
        <input type="text" name="titulo">

        <label for="descripcion">Descripcion:</label>
        <input type="text" name="descripcion">

        <label for="categoria">Categoria:</label>
        <input type="text" name="categoria">

        <label for="latitud">Latitud:</label>
        <input type="text" name="latitud">

        <label for="longitud">Longitud:</label>
        <input type="text" name="longitud">

        <label for="fechaHecho">Fecha del Hecho:</label>
        <input type="datetime-local" name="fechaHecho">

        <label for="multimedia">Imágenes o videos:</label>
        <input type="file" name="multimedia" multiple accept="image/*,video/*,audio/*,application/pdf*">

        <input type="submit" value="Guardar">
    </form>
</body>
</html>
