{{#partial "head"}}
    <link rel="stylesheet" href="/assets/home.css">
    <title>MetaMapa</title>
{{/partial}}

{{#partial "contenido-main"}}
    <section class="contenido-header">

        <a href="/hecho/nuevo" class="nav-link">Crear Hecho</a>

        <div class="busqueda">
            <form role="search"
                  hx-get="/home" hx-target="#resultados" hx-push-url="true" hx-trigger="submit"
                  class="form-busqueda">
                <input type="search" name="likeTexto" placeholder="Buscar hecho..." value="{{busqueda}}" class="input-busqueda">
                <button class="btn btn-buscar" type="submit"> Buscar </button>
            </form>
        </div>
    </section>

    <div class="contenedor-padre">
        <div class="container-filtros">
            <form class="form-filtros"
                hx-get="/home" hx-target="#resultados" hx-push-url="true">

                <label class="container-filtros-label">
                    Seleccionar Coleccion
                    <select name="coleccionId"
                            class="select-coleccion"
                            hx-get="/home"
                            hx-target="#resultados"
                            hx-push-url="true"
                            hx-trigger="change">
                        {{#each colecciones}}
                            <option value="{{id}}"
                                {{#eq id ../coleccionSeleccionada}}selected{{/eq}}>
                                {{titulo}}
                            </option>
                        {{/each}}
                    </select>
                </label>


                <label class="container-filtros-label"> Modo de Navegacion </label>
                <ul class="lista-navegacion">
                    <li>
                        <input id="navegacion-irrestricta" type="radio" name="modoNavegacion" value="irrestrica"/>
                        <label for="navegacion-irrestricta"> Navegaci칩n Irrestricta </label>
                    </li>
                    <li>
                        <input id="navegacion-curada" type="radio" name="modoNavegacion" value='curada'/>
                        <label for="navegacion-curada"> Navegaci칩n Curada </label>
                    </li>
                    <li><small> Podr치s ver los hechos m치s confiables </small></li>
                </ul>

                <label class="container-filtros-label"> Provincia </label>
                <ul id="filtro-provincias" class="lista-ubicacion">
                    {{> templates/partials/filtro-provincias}}
                </ul>

                <label class="container-filtros-label"> Fecha </label>
                <ul class="lista-fecha">
                     <li>
                       <span>desde</span>
                       <input type="date" name="fechaDesde" value="{{fechaDesde}}">
                     </li>
                     <li>
                       <span>hasta</span>
                       <input type="date" name="fechaHasta" value="{{fechaHasta}}">
                     </li>
                </ul>

               <button type="submit" class="btn">Aplicar Filtros</button>
           </form>
        </div>

        <div id="resultados" class="container-tarjetas">
            {{> templates/partials/resultados}}
        </div> <!-- contenedor-tarjetas-->
    </div> <!-- contenedor-padre-->
{{/partial}}

{{> templates/layout/layout}}