  public SolicitudDeEliminacion(String tituloHecho, String motivo, Fuente fuente, DetectorDeSpam detectorSpam) {
    this.tituloHecho = requireNonNull(tituloHecho);
    this.motivo = requireNonNull(motivo);
    this.fuente = requireNonNull(fuente);

    if (detectorSpam.esSpam(motivo)) {
      this.estado = Estado.RECHAZADA;
    }
  }

  public String getTituloHecho() {
    return tituloHecho;
  }

  public String getMotivo() {
    return motivo;
  }

  public Estado getEstado() {
    return estado;
  }

  public void aceptar() {
    if (estado == Estado.PENDIENTE) {
      estado = Estado.ACEPTADA;
    }
  }

  public void rechazar() {
    if (estado == Estado.PENDIENTE) {
      estado = Estado.RECHAZADA;
    }
  }
}
